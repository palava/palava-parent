  <build>
    <plugins>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>1.5.0</version>
        <configuration>
          <header>/header</header>
          <includes>
            <include>**/*.java</include>
            <include>**/*.sh</include>
          </includes>
        </configuration>
        <executions>
          <execution>
            <id>format</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
          <execution>
            <id>check</id>
            <phase>verify</phase>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>de.cosmocode.palava</groupId>
            <artifactId>palava-license</artifactId>
            <version>2.0</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <site>
      <id>palava-website</id>
      <name>www.palava2.org</name>
      <url>scp://server.onsteroids.org/export/www/www.palava2.org/htdocs/</url>
    </site>
  </distributionManagement>
